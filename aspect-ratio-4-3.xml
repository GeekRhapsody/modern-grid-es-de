<theme>
    <view name="system, gamelist">
        <helpsystem name="help">
            <pos>0.96 0.935</pos>
            <fontSize>0.026</fontSize>
            <entrySpacing>0.01675</entrySpacing>
            <iconTextSpacing>0.0041666</iconTextSpacing>
        </helpsystem>
        <image name="bottomLine">
            <pos>0.5 0.9</pos>
        </image>
    </view>

    <view name="system">
        <grid name="systemGrid">
            <itemSize>0.177 0.240</itemSize>
			<itemSpacing>0.013 0.015</itemSpacing>
        </grid>
        <image name="arrowBlock">
            <size>0.029 0.047</size>
        </image>
        <image name="selectionBox">
            <size>0.243 0</size>
        </image>
    </view>

    <view name="gamelist">
        <badges name="badges">
            <lines>2</lines>
            <itemsPerLine>5</itemsPerLine>
            <itemMargin>0.005 0.00375</itemMargin>
        </badges>
    </view>
	
    <variant name="withVideos">
        <view name="gamelist">
            <video name="gameVideo">
                <pos>0.609 0.378</pos>
                <maxSize>0.44 0.44</maxSize>
            </video>
        </view>
    </variant>

    <variant name="withoutVideos">
        <view name="gamelist">
            <image name="gameImage">
                <pos>0.609 0.378</pos>
                <maxSize>0.44 0.44</maxSize>
            </image>
        </view>
    </variant>		
	
</theme>