<theme>
    <view name="system, gamelist">
        <helpsystem name="help">
            <pos>0.96 0.935</pos>
            <fontSize>0.032</fontSize>
            <entrySpacing>0.022</entrySpacing>
            <iconTextSpacing>0.00516</iconTextSpacing>
        </helpsystem>
        <image name="bottomLine">
            <pos>0.5 0.9</pos>
        </image>
    </view>

    <view name="system">
        <grid name="systemGrid">
            <itemSize>0.145 0.255</itemSize>
			<itemSpacing>0.013 0.010</itemSpacing>
        </grid>
        <image name="arrowBlock">
            <size>0.023 0.047</size>
        </image>
        <image name="selectionBox">
            <size>0.2314 0</size>
        </image>
    </view>

    <view name="gamelist">
        <badges name="badges">
            <lines>2</lines>
            <itemsPerLine>5</itemsPerLine>
            <itemMargin>0.0028125 0.005</itemMargin>
        </badges>
    </view>
	
    <variant name="withVideos">
        <view name="gamelist">
            <video name="gameVideo">
                <pos>0.609 0.378</pos>
                <maxSize>0.50 0.44</maxSize>
            </video>
        </view>
    </variant>

    <variant name="withoutVideos">
        <view name="gamelist">
            <image name="gameImage">
                <pos>0.609 0.378</pos>
                <maxSize>0.50 0.44</maxSize>			
            </image>
        </view>
    </variant>	
</theme>